
/* 调用fonts.wxss里的样式 */
@import "../play/fonts/fonts.wxss";
/* 四个图标的调用地址 */
@font-face {font-family: "iconfont";
  src: url('iconfont.eot?t=1564570537388'); /* IE9 */
  src: url('iconfont.eot?t=1564570537388#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2'),
  url('iconfont.woff?t=1564570537388') format('woff'),
  url('iconfont.ttf?t=1564570537388') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+ */
  url('iconfont.svg?t=1564570537388#iconfont') format('svg'); /* iOS 4.1- */
}

.iconfont {
  /* 首先执行，类似权重 */
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  /* antialiased：抗锯齿很好 */
  -webkit-font-smoothing: antialiased;
  /* 字体抗锯齿属性:使字体更清晰*/
  -moz-osx-font-smoothing: grayscale;
}
