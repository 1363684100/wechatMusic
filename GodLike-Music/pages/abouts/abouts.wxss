/* '我的'整个界面 */
.about-page {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: rgb(247, 241, 241);
  box-sizing: border-box;
  padding: 0 40rpx;
}
/* 微信名及微信头像的box样式 */
.about-header {
  display: flex;
  margin: 40rpx 0;
  position: relative;
}
/* 微信名样式 */
.about-header .about-userName {
  font-size: 48rpx;
  color: rgb(0, 0, 0);
  flex: 1;
  margin-top:40rpx; 
}
/* 微信头像样式 */
.about-header .about-userImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #333;
} 
.userbtn {
  position: absolute;
  top: 20rpx;
  left: 310rpx;  
  font-size: 20rpx;
  color: #ccc;
  background-color: transparent;
  line-height: 40rpx;
  padding: 0 6rpx;
  border: 1px solid #ccc;
  border-radius: 14rpx;
}
.aboutMe {
  width: 100%;
  background-color: #ccc2c2;
  color: rgb(0, 0, 0);
  font-size: 35rpx;
  box-sizing: border-box;
  padding: 40rpx;
  border-radius: 10rpx; 
}
.aboutMe .aboutMe-title {
  font-size: 42rpx;
  display:block;
  padding: 20rpx 0;
}
.like-box {
  line-height: 90rpx;
  display: flex;
}
.like .icon-icon-,.icon-icon-1,.icon-icon-2,.icon-icon-3{
  margin-right:30rpx; 
  font-size: 34rpx;
}
.like .like-line {
  flex: 2;
}
.right {
  float: right;
  font-size: 68rpx;
  color: #888;
}
.bottom-line,.right-line{
  border-bottom: 1px solid #444;
}
.dir {
  margin-top:80rpx; 
}



view{
    box-sizing: border-box;
}



.item-box{
    width: 100%;
    margin: 0 auto;
    padding:40rpx 0;
}



.items{
    width: 100%;
}
.item{
    position: relative;
    border-top: 2rpx solid #eee;
    height: 120rpx;
    line-height: 120rpx;
    overflow: hidden;
     
}
.item:last-child{
    border-bottom: 2rpx solid #eee;
}
.inner{
    position: absolute;
    top:0;
}
.inner.txt{
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 10rpx;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.inner.del{
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}
.item-icon{
    width: 64rpx;
    vertical-align: middle;
    margin-right: 16rpx
}