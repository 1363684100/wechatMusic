/* pages/lcm/lcm.wxss */
@import '../../image/iconfont.wxss';
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.view_all{
  width: 100vw;
  height:100vh;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}
.v1{
  width: 100vw;
  height: 90vh;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: center;
}
.v1_swi1{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.v1_seachin{
  width: 60vw;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  border-width: 1rpx;
  border-color: grey;
  box-shadow: 1px 1px 2px 1px rgba(128, 128, 128, 0.726);
  border-radius: 6px;
  margin: 10px;
}
.swiper-tab{
 width: 100%;
 border-bottom: 2rpx solid #777777;
 text-align: center;
 line-height: 80rpx;
}
.swiper-tab-list{
 font-size: 30rpx;
 display: inline-block;
 width: 20%;
 color: #777777;
 margin-right: 4%;
  margin-left: 4%;
}
.on{
 color: #da7c0c;
 border-bottom: 5rpx solid #da7c0c;
}
.swiper-box{
 display: block;
 height: 100%;
 width: 100%;
}
.swiper-box view{
 text-align: center;
}
.list{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.hang{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 89vw;
  height: 18vw;
  margin: 3vw 5.5vw 3vw 5.5vw;
}
.hangimg{
  width: 18vw;
  height: 18vw;
  border-radius: 12rpx;
}
.img{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.img_gs{
  border-radius: 100rpx;
}
.hangifm{
  width: 60%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: flex-start;
}
.xinxi{
  font-size: 28rpx;
  font-family: '楷体';
  color: #606263cc;
}
.hangmore{
  margin: 20rpx;
}
.v2{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  width: 99vw;
  height: 10vh;
}
.hangimg1{
  width: 10vh;
  height: 10vh;
  border-radius: 12rpx;
}
.img1{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.hangifm1{
  width: 65%;
